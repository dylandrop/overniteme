<!DOCTYPE html>
<html>
<head>
  <title>Overnite.me</title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Overnite.me", root_path, class: "brand" %>
        <div class="nav-collapse">
          <ul class="nav">
            <% if current_user %>
              <li><%= link_to "Matches", users_path %></li>
              <li><%= link_to "Conversations", conversations_path %></li>
            <% end %>
            <li><%= link_to "Contact", contact_path %></li>
            <% if user_signed_in? %>
              <%= link_to user_path(current_user) do %>
                <div class="btn btn-inverse"><i class="icon-pad icon-user icon-white"></i>Profile</div>
              <% end %>
              <%= link_to edit_user_registration_path do %>
                <div class="btn btn-inverse"><i class="icon-pad icon-cog icon-white"></i>Settings</div>
              <% end %>
              <%= link_to destroy_user_session_path, :method => :delete do %>
                <div class="btn btn-primary">Logout</div>
              <% end %>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
  <br/><br/><br/><br/>
  <div class="container">
    <div class="row-fluid">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <%= yield %>
  </div>
</body>
</html>
