

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>

  <div class="control-group">
    <div class="controls">
      <h2>Sign up</h2>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= devise_error_messages! %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, class: "control-label", for: "user_email" %>
    <div class="controls">
      <%= f.email_field :email, placeholder: "Must be a columbia.edu address" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :username, class: "control-label", for: "user_username" %>
    <div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :gender, class: "control-label", for: "user_gender" %>
    <div class="controls">
      <%= f.select :gender, User::GENDERS, :include_blank => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :seeking, class: "control-label", for: "user_seeking" %>
    <div class="controls">
      <%= f.select :seeking, User::SEEKING, :include_blank => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, class: "control-label", for: "user_description" %>
    <div class="controls">
      <%= f.text_area :description, rows: 5, placeholder: "Tell your potential matches a little about yourself." %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, class: "control-label", for: "user_password" %>
    <div class="controls">
      <%= f.password_field :password, placeholder: "••••••••" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, class: "control-label", for: "user_password_confirmation" %>
    <div class="controls">
      <%= f.password_field :password_confirmation, placeholder: "••••••••" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Sign up", class: "btn" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>

<% end %>


