
<section class="row-fluid">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
    <div class="control-group">
      <div class="controls"><h2>Sign in</h2></div>
    </div>
    <div class="control-group">
      <%= f.label :email, class: "control-label", for: "user_email" %>
      <div class="controls">
        <%= f.email_field :email, placeholder: "Must be xyz@columbia.edu" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, class: "control-label", for: "user_password" %>
      <div class="controls">
        <%= f.password_field :password, placeholder: "••••••••" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="control-group">
        <div class="controls">
          <label class="checkbox">
            <%= f.check_box :remember_me %> Remember me
          </label>
        </div>
      </div>
    <% end -%>

    <div class="control-group">
      <div class="controls"><%= f.submit "Sign in", class: "btn" %></div>
    </div>

    <div class="control-group">
      <div class="controls"><%= render :partial => "devise/shared/links" %></div>
    </div>
  <% end %>
</section>